<!-- 商品 -->
<view class="goods">
  <navigator url='/pages/index/detailed/detailed?id={{item.id}}'
    open-type="reLaunch" class="item" wx:for="{{goodList}}" wx:key="id">
    <image class="img" mode="widthFix" src='{{item.img}}'></image>
    <view class="name">{{item.name}}</view>
    <view class="intro">{{item.intro}}</view>
    <view class="price"> <text>{{item.price}}￥</text> 起</view>
    <button class="btn">立即购买</button>
  </navigator>
</view>