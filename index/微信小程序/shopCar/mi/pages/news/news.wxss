/* 搜索框 */
.search {
  width: 100%;
  height: 100rpx;
  background: #efefef;
  padding: 15rpx;
  box-sizing: border-box;
}

.search > input {
  width: 80%;
  height: 100%;
  background:white;
  border-radius: 15px;
  text-indent: 10px;
  font-size: 30rpx;
  float: left;
}
.search > button {
  border-radius: 15px;
  margin: 0;
  padding: 0;
  float: left;
  width: 140rpx !important;
  line-height: 70rpx;
  height: 100%;
  color: white;
  text-align: center;
  background: rgb(7,193,96);
}
.list {
  margin: 0px 30rpx;
}

.list > .link {
  padding: 30rpx 15rpx 25rpx 10rpx;
  display: flex;
  border-bottom: 2rpx solid #ccc;
}

.list > .link > image {
  width: 160rpx;
  height: 160rpx;
}

.list > .link > .text {
  width: 100%;
  margin: 17rpx 0rpx 0rpx 0rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}

.list > .link > .text > .title {
  font-size: 33rpx;
  padding-bottom: 15rpx;
  color: #333;
}

  .list > .link > .text > .info {
    font-size: 30rpx;
    color: #aaa;
}

/* 发布 */
movable-area {
  position: fixed;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
  /* 事件穿透 */
  pointer-events: none;
}

movable-view {
  width: 100rpx;
  height: 100rpx;
  top: auto;
  left: auto;
  bottom: 30rpx;
  right: 30rpx;
  /* 事件穿透 */
  pointer-events: auto;
}
.btnAdd {
  width: 100rpx;
  height: 100rpx;
}

.bottom-text {
  text-align: center;
  font-size: 30rpx;
  color: #999;
  padding: 40rpx 0px;
}